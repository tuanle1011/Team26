@model IEnumerable<ComTam_Store.Models.Product>

@{
    ViewBag.Title = "Index";
}

<title>ComTam Store | Trang chủ</title>
<body>
    <br />
    <br />
    <br />
    <br />

    <div class="tab-content">
        <!-- Start men product category -->
        <div class="tab-pane fade in active">
            @foreach (var item in Model)
            {
                <ul class="aa-product-catg">
                    <!-- start single product item -->
                    <li>
                        <figure>
                            <a class="aa-product-img" href="#"><img src="@Url.Content(item.ImageLink)" style="width:270px" alt="product image"></a>
                            <a class="aa-add-card-btn" href="/ShoppingCart/AddtoCart/@item.IdSP"><span class="fa fa-shopping-cart"></span>Thêm vào giỏ hàng</a>
                            <figcaption>
                                <h4 class="aa-product-title"><a href="#"> @Html.DisplayFor(model => item.SPName)</a></h4>
                                <span class="aa-product-price">@Html.DisplayFor(model => item.Gia)</span><span class="aa-product-price"> VNĐ</span>
                            </figcaption>
                        </figure>
                        <div class="aa-product-hvr-content">
                            <a href="#" data-toggle="tooltip" data-placement="top" title="Add to Wishlist"><span class="fa fa-heart-o"></span></a>
                            <a href="#" data-toggle="tooltip" data-placement="top" title="Compare"><span class="fa fa-exchange"></span></a>
                            <a href="#" data-toggle2="tooltip" data-placement="top" title="Quick View" data-toggle="modal" data-target="#quick-view-modal"><span class="fa fa-search"></span></a>
                        </div>
                        <!-- product badge -->
                        
                    </li>
                </ul>}
        </div>
    </div>
</body>